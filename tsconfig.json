{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
    "paths": {
      "@store/*": ["store/*"],
      "@/*": ["./*"],
    }
  },
  "include": ["next-env.d.ts", "**/*", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "next.config.mjs", "./tests/vitest-setup.ts" ],
  "exclude": ["node_modules"]
}
